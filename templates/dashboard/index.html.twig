<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Entreprise - Candidature de Stage</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@mdi/font/css/materialdesignicons.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .navbar {
            background-color: #343a40;
        }

        .sidebar {
            background-color: #f8f9fa;
            height: 100vh;
            padding-top: 20px;
        }

        .sidebar .nav-item {
            font-size: 16px;
        }

        .sidebar .nav-link {
            color: #343a40;
        }

        .sidebar .nav-link.active {
            background-color: #007bff;
            color: white;
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
        }

        .card-text {
            font-size: 32px;
            font-weight: bold;
            color: #007bff;
        }

        .card-body {
            background-color: #ffffff;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f8f9fa;
        }

        .card-header {
            background-color: #007bff;
            color: white;
        }

        .header-title {
            font-size: 24px;
            font-weight: bold;
        }
    </style>
</head>

<body>
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="mdi mdi-view-dashboard"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_offre_stage_index') }}" >
                            <i class="mdi mdi-briefcase"></i>
                            Offres de Stage
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-account-group"></i>
                            Candidatures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-chart-line"></i>
                            Statistiques
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-4">
            <div class="header-title mb-4">
                <h2>Bienvenue sur le Dashboard de l'Entreprise</h2>
            </div>

            <!-- Row for Stats -->
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Offres Actuelles</h5>
                            <h2 class="card-text">{{ nombreOffres }}</h2> <!-- Affichage du nombre d'offres -->
                            <p class="text-muted">Offres de stage disponibles</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Candidatures Soumises</h5>
                            <h2 class="card-text">120</h2>
                            <p class="text-muted">Candidatures en attente</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Candidatures Acceptées</h5>
                            <h2 class="card-text">55</h2>
                            <p class="text-muted">Candidatures validées</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Candidats En Attente</h5>
                            <h2 class="card-text">25</h2>
                            <p class="text-muted">Candidats en attente de réponse</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Graphiques -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="card-title">Candidatures par Mois</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="myChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="card-title">Candidatures par Domaine</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="domaineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tableau des Offres -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="card-title">Liste des Offres de Stage</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Nom de l'Offre</th>
                                    <th>Entreprise</th>
                                    <th>Date de Publication</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>Stage Développement Web</td>
                                    <td>Entreprise A</td>
                                    <td>01/12/2024</td>
                                    <td><span class="badge bg-success">Ouverte</span></td>
                                </tr>
                                <tr>
                                    <td>Stage Marketing</td>
                                    <td>Entreprise B</td>
                                    <td>05/12/2024</td>
                                    <td><span class="badge bg-danger">Fermée</span></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- JS pour les graphiques -->
<script>
    // Graphique pour les Candidatures par Mois
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'Candidatures Soumises',
                data: [12, 19, 3, 5, 2, 3],
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }]
        }
    });

    // Graphique pour les Candidatures par Domaine
    var ctx2 = document.getElementById('domaineChart').getContext('2d');
    var domaineChart = new Chart(ctx2, {
        type: 'pie',
        data: {
            labels: ['Informatique', 'Marketing', 'Finance', 'RH'],
            datasets: [{
                label: 'Candidatures',
                data: [40, 30, 20, 10],
                backgroundColor: ['rgba(75, 192, 192, 0.2)', 'rgba(153, 102, 255, 0.2)', 'rgba(255, 159, 64, 0.2)', 'rgba(255, 99, 132, 0.2)'],
                borderColor: ['rgb(75, 192, 192)', 'rgb(153, 102, 255)', 'rgb(255, 159, 64)', 'rgb(255, 99, 132)'],
                borderWidth: 1
            }]
        }
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
