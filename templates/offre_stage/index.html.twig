{% extends 'base.html.twig' %}

{% block title %}Offres de Stage{% endblock %}

{% block body %}
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="icon" href="img/favicon.png" type="image/png" />
    <title>Offres de Stage</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        /* Général */
        body {
            background-color: #f4f6f9;
            font-family: 'Poppins', sans-serif;
        }

        h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .carousel-item img {
            object-fit: cover;
            height: 400px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
        }

        .badge {
            background-color: #3498db;
            color: #ffffff;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 50px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        footer {
            background-color: #2c3e50;
            color: #ffffff;
            padding: 2rem 0;
            text-align: center;
        }

        footer a {
            color: #00a8ff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="index.html">
                <img src="img/logo.png" alt="Logo" height="40" />
                <span>Stage Up</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard') }}">Accueil</a>
                    </li>


            </div>
        </div>
    </nav>
</header>

<div class="container py-5">
    <h1 class="text-center mb-5">Nos Offres de Stage</h1>

    <!-- Carousel -->
    <div id="carouselOffres" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% for offre_stage in offre_stages|batch(3) %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <div class="row">
                        {% for offre in offre_stage %}
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">
                                            <a href="{{ path('app_offre_stage_show', {'id': offre.id}) }}" class="text-dark">{{ offre.titre }}</a>
                                        </h5>
                                        <p class="card-text">
                                            {{ offre.description|slice(0, 100) ~ '...' }}
                                        </p>
                                        <span class="badge">Contrat: {{ offre.typecontrat }}</span>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-center">
                                            <a href="{{ path('app_offre_stage_show', {'id': offre.id}) }}" class="btn btn-primary w-100">
                                                Voir les détails
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Carousel controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselOffres" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Précédent</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselOffres" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Suivant</span>
        </button>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}
