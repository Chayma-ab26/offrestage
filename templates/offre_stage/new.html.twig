{% extends 'base.html.twig' %}

{% block title %}Ajouter une Offre de Stage{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <i class=""></i> EduStage
            </div>
            <a href="{{ path('app_dashboard') }}"><i class="fa-solid fa-house"></i> Accueil</a>
            <a href="{{ path('app_offre_stage_new') }}"><i class="fa-solid fa-briefcase"></i> Ajouter Offres de Stage</a>
            <a href="{{ path('app_offre_stage_index') }}"><i class="fa-solid fa-list"></i> Liste Offres de Stage</a>
            <a href="{{ path('app_candidature_index') }}"><i class="fa-solid fa-user-check"></i> Candidatures</a>
            <a href="{{ path('app_profile') }}"><i class="fas fa-user"></i> Profil</a>
            <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Deconnexion</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow-lg border-0 rounded-4">
                            <div class="card-header bg-dark text-white text-center py-3">
                                <h4 class="mb-0">Ajouter une Nouvelle Offre de Stage</h4>
                            </div>
                            <div class="card-body">
                                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                                <div class="form-group mb-3">
                                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre de l\'offre'}}) }}
                                    {{ form_errors(form.titre) }}
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la description'}}) }}
                                    {{ form_errors(form.description) }}
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.datePublication, 'Date de Publication', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.datePublication, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.datePublication) }}
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.dateExpiration, 'Date d\'Expiration', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.dateExpiration) }}
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.typecontrat, 'Type de Contrat', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.typecontrat, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.typecontrat) }}
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.entreprise, 'Nom de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.entreprise, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.status, 'Statut de l\'offre', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.status) }}
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5 py-3">Ajouter l'Offre</button>
                                <a href="{{ path('app_offre_stage_index') }}" class="btn btn-outline-secondary btn-lg px-5 py-3">Annuler</a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            background-color: #003366;
            color: #fff;
            padding-top: 20px;
            transition: 0.3s;
        }

        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            padding: 10px 15px;
            display: block;
            margin: 10px 0;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .sidebar a:hover, .sidebar a.active {
            background-color: #0056b3;
            color: #fff;
        }

        .sidebar-header {
            text-align: center;
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #ffc107;
        }

        /* Main content */
        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .form-control, .form-select {
            border-radius: 10px;
        }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 100px;
            }
            .content {
                margin-left: 100px;
            }
        }
    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
{% endblock %}
